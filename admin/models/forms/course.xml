<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			/>

        

        <field 	
			name="title" 
			hint="Course Title" 
			type="text" default=""  
			required="true" 
			label="Course Title" 
			description="Define the course title" 
			size="10" />

        <field 	
			name="description" 
			required="true" 
			type="textarea" 
			default="" 
			label="Course Descripiton" 
			description="" rows="10" cols="5" />
		
		<field
			name="programme_id"
			type="sql"
			default="10"
			label="Select a programme"
			query="SELECT id, title FROM kesra__programmes"
			key_field="id"
			value_field="title"
			required="true"
			>
			<option value="">Please select your option</option>
		</field>

		<field name="studymode" type="list" default="" required="true" label="Study mode" description="">
			<option value="">Please Select</option>
			<option value="day">Day</option>
			<option value="evening">Evening</option>
			<option value="day &amp; evening">Day &amp; Evening</option>
			<option value="weekend">Weekend</option>
		</field>
		
		<field name="duration" type="list" default="" required="true" label="Duration" description="">
			<option value="">Please Select</option>
			<option value="1 month"> 1 Month</option>
			<option value="2 months"> 2 Months</option>
			<option value="6 months"> 6 Months</option>
			<option value="1 year">1 Year</option>
			<option value="2 years">2 Years</option>
		</field>


		<field name="campus" type="list" default="" required="true" label="Select an option" description="">
			<option value="">Please Select</option>
			<option value="nairobi">Nairobi Campus</option>
			<option value="mombasa">Mombasa Campus</option>
			<option value="ecampus">eCampus</option>
		</field>

		
		<field name="document" 
			type="filelist" 
			label="Upload a PDF" 
			directory="images/programmes"
			description="Choose an PDF file from your computer with maximum 10MB" 
			stripext="false" />


	</fieldset>
</form>